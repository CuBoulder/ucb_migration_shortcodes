{#
/**
 * @file
 * Default theme implementation for the countdown shortcode.
 *
 * Available variables:
 * - text (the date)
 * - style (inline/float)
 * - background (solid/transparent)
 * - size (regular/full)
 */
#}

{% if style is empty %}
{% set style = 'inline'%}
{% endif %}

{% if background is empty %}
{% set background = 'transparent'%}
{% endif %}

<span class="ucb-countdown countdown-{{ style }} countdown-{{ background }}" aria-hidden="true">{{ text|t }}</span>
