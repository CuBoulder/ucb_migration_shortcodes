{#
/**
 * @file
 * Default theme implementation for the button shortcode.
 *
 * Available variables:
 * - link: The url.
 * - size: The size of the button.
 * - color: The button color.
 * - style: The style of the button.
 * - ico: A FA icon if chosen.
 * - text: The button text.
 */
#}
<a{{ create_attribute({ class: ['ucb-link-button', 'ucb-link-button-' ~ color, 'ucb-link-button-' ~ style, 'ucb-link-button-' ~ size], href: link }) }}>
  <span class="ucb-link-button-contents">
    {% if ico %}
      <i{{ create_attribute({ class: ico }) }}>&nbsp;</i>
    {% endif %}
    {{ text }}
  </span>
</a>
