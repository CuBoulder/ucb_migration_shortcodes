{#
/**
 * @file
 * Default theme implementation for the map shortcode.
 *
 * Available variables:
 * - text 
 * - size
 */
#}

{% if mapfragment %}
  <ucb-map class="ucb-map ucb-campus-map ucb-map-size-{{ size }}" data-map-location="{{ mapfragment }}">&nbsp;</ucb-map>
{% else %}
  <ucb-map class="ucb-map ucb-google-map ucb-map-size-{{ size }}" data-map-location="{{ maplocation }}">&nbsp;</ucb-map>
{% endif %}
